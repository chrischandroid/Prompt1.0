<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="mineVm"
            type="com.taichi.prompts.android.fragment.mine.MineViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/group_988"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toRightOf="@+id/frame_16245"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="38dp"
            android:background="@drawable/setting"
            />


        <RelativeLayout
            android:id="@+id/frame_16245"
            android:layout_width="370dp"
            android:layout_height="530dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="114dp">
            <View
                android:id="@+id/rectangle_9"
                android:layout_width="370dp"
                android:layout_height="420dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rectangles"
                android:layout_below="@id/profile">
            </View>

            <androidx.cardview.widget.CardView
                android:id="@+id/profile"
                android:layout_width="370dp"
                android:layout_height="370dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:elevation="5dp"
                app:cardCornerRadius="16dp">
                <ImageView
                    android:id="@+id/headImg"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="@drawable/default_img"/>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="335dp"
                android:layout_height="88dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">
                <View
                    android:id="@+id/jake_blucsd"
                    android:layout_width="370dp"
                    android:layout_height="88dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/banner2"
                    app:cardCornerRadius="16dp">
                </View>
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/frame_59"
                    android:layout_width="154dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_20">
                    <TextView
                        android:id="@+id/some1"
                        android:layout_width="154dp"
                        android:layout_height="24dp"
                        android:text="充值金麦穗 立享7折优惠"
                        android:textAppearance="@style/some_id"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6sp"
                        android:translationY="-2.77sp"
                        android:layout_alignParentTop="true"
                        android:gravity="top"
                        />

                    <TextView
                        android:id="@+id/some2"
                        android:layout_width="143dp"
                        android:layout_height="20dp"
                        android:text="首次充值额外赠送500麦粒"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textAppearance="@style/some_id"
                        android:layout_alignParentBottom="true"
                        android:lineSpacingExtra="4sp"
                        android:translationY="-2.09sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frame_57"
                    android:layout_width="58dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/resource_goto" />

            </RelativeLayout>


        </RelativeLayout>












    </androidx.constraintlayout.widget.ConstraintLayout>







</layout>

