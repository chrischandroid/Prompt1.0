<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161916"
    tools:context=".activity.login.CompleteGuideActivity">
    <TextView
        android:id="@+id/topview"
        android:layout_width="295dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-150dp"
        android:text="@string/completes"
        android:textAppearance="@style/completes"
        app:layout_constraintStart_toStartOf="@id/group_983"
        app:layout_constraintTop_toTopOf="@id/group_983"
        android:gravity="top"
        />



    <View
        android:id="@+id/group_983"
        android:layout_width="335.03dp"
        android:layout_height="260.11dp"
        android:background="@drawable/light_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:layout_width="198dp"
        android:layout_height="183dp"
        android:background="@drawable/give_me_five"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/group_983"
        android:layout_marginTop="-35dp">
    </ImageView>
    <ImageView
        android:id="@+id/icon94"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintStart_toStartOf="@id/group_983"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/group_983"
        android:layout_marginBottom="60dp"
        android:src="@drawable/icon99" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bubblee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/icon94"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/icon94"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/bubble1">

        <TextView
            android:id="@+id/greetingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="太好啦！来把一起唱欢迎开启灵启Prompts！️"
            android:textColor="#FFFFFF"
            android:textSize="15sp"></TextView>

    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bubblee1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@id/icon94"
        android:layout_marginStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/bubblee"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/bubble1">

        <TextView
            android:id="@+id/bottomView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="记得先去完善自己的资料，这样才能让别人看见你哦！️"
            android:textColor="#FFFFFF"
            android:textSize="15sp"></TextView>

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button"
        android:layout_width="335dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/i_konw"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/open_new_home"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="我知道了"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:lineSpacingExtra="6sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
